# This is the env for the local development only
# Dev Environment
ENVIRONMENT=local
# For the vercel deployment, uvicorn will run server on port 8000
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/auto_buyer
NEXT_PUBLIC_BACKEND_URL=http://localhost:8001/api

# JWT
JWT_SECRET=change-this-in-prod
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#leads-inbox
SLACK_ENABLED=true

# Slack Workflow Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token-here
SLACK_WORKFLOW_WEBHOOK_URL=https://hooks.slack.com/workflows/YOUR/WORKFLOW/URL
SLACK_WORKFLOW_STEP_ID=your-workflow-step-id
SLACK_WORKFLOW_ENABLED=true

# Database connection pool settings
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10
DB_POOL_RECYCLE_SECONDS=3600
DB_POOL_TIMEOUT_SECONDS=30